<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                                 http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
             version="2.3">
    
    <!-- Navigation depuis index.xhtml -->
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navigation depuis home.xhtml -->
    <navigation-rule>
        <from-view-id>/home.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>lieu</from-outcome>
            <to-view-id>/lieu.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>visiter</from-outcome>
            <to-view-id>/visiter.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>apropos</from-outcome>
            <to-view-id>/a_propos.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navigation pour retour à l'accueil -->
    <navigation-rule>
        <from-view-id>/lieu.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/a_propos.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/visiter.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navigation pour retour à l'index -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navigation vers modifier -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>modifier</from-outcome>
            <to-view-id>/modifier.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navigation vers supprimer -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>supprimer</from-outcome>
            <to-view-id>/supprimer.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Navigation vers lieu avec message de succès -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>lieuSuccess</from-outcome>
            <to-view-id>/lieu.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
